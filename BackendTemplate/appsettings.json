{
    "ConnectionStrings": {
        "DefaultConnection": "",
        "Redis": "localhost:6379,abortConnect=false,connectRetry=3,connectTimeout=5000,syncTimeout=5000"
    },
    "Serilog": {
        "MinimumLevel": {
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.EntityFrameworkCore": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp: dd-MM HH:mm:ss} {Level:u3}] |{SourceContext}| {NewLine}{Message:lj}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/log-.txt",
                    "rollingInterval": "Day",
                    "rollOnFileSizeLimit": true,
                    "retainedFileCountLimit": 7,
                    "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
                }
            }
        ]
    },
    "JwtSettings": {
        "SecretKey": "your-super-secret-jwt-key-min-64-characters-long-replace-this-in-production",
        "Issuer": "YourApp",
        "Audience": "YourAppUsers",
        "ExpirationMinutes": 15,
        "RefreshTokenDays": 7
    },
    "Frontend": {
        "BaseUrl": "https://your-frontend",
        "ResetPasswordPath": "reset-password"
    },
    "AdminSettings": {
        "Username": "AdminUser",
        "Password": "AdminUser123$",
        "Email": "admin@example.com",
        "FirstName": "Admin",
        "LastName": "User"
    },
    "Cloudinary": {
        "CloudName": "",
        "ApiKey": "",
        "ApiSecret": "",
        "FolderPrefix": "MyApp"
    },
    "Smtp": {
        "Host": "smtp.gmail.com",
        "Port": 465,
        "Username": "",
        "Password": "",
        "FromAddress": "",
        "FromName": "MyApp"
    },
    "Stripe": {
        "SecretKey": "",
        "PublishableKey": "",
        "WebhookSecret": ""
    },
    "Hangfire": {
        "DashboardUsername": "Admin",
        "DashboardPassword": "HangfireAdmin123&"
    },
    "Cors": {
        "AllowedOrigins": ["https://your-frontend-domain.com"],
        "AllowCredentials": true
    }
}
