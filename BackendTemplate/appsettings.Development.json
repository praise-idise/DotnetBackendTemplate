{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.\\SQLEXPRESS;Database=ApplicationDB;TrustServerCertificate=True;Trusted_Connection=True;MultipleActiveResultSets=true",
    "Redis": "localhost:6379,abortConnect=false,connectRetry=3,connectTimeout=5000,syncTimeout=5000"
  },
  "Serilog": {
    "MinimumLevel": {
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp: dd-MM HH:mm:ss} {Level:u3}] |{SourceContext}| {NewLine}{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 7,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ]
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-jwt-key-min-64-characters-long-replace-this-in-production",
    "Issuer": "YourApp",
    "Audience": "YourAppUsers",
    "ExpirationMinutes": 15,
    "RefreshTokenDays": 7
  },
  "Frontend": {
    "BaseUrl": "http://localhost:3000",
    "ResetPasswordPath": "reset-password"
  },
  "AdminSettings": {
    "Username": "AdminUser",
    "Password": "AdminUser123$",
    "Email": "admin@example.com",
    "FirstName": "Admin",
    "LastName": "User"
  },
  "Cloudinary": {
    "CloudName": "your-cloud-name",
    "ApiKey": "your-api-key",
    "ApiSecret": "your-api-secret",
    "FolderPrefix": "DevApp"
  },
  "Smtp": {
    "Host": "smtp.gmail.com",
    "Port": 465,
    "Username": "your-email@gmail.com",
    "Password": "your-gmail-app-password",
    "FromName": "MyApp",
    "FromAddress": "your-email@gmail.com"
  },
  "Stripe": {
    "SecretKey": "sk_test_your_secret_key",
    "PublishableKey": "pk_test_your_publishable_key",
    "WebhookSecret": "whsec_your_webhook_secret"
  },
  "Hangfire": {
    "DashboardUsername": "DevAdmin",
    "DashboardPassword": "DevHangfire123!"
  },
  "Cors": {
    "AllowedOrigins": ["http://localhost:3000", "http://localhost:5173"],
    "AllowCredentials": true
  }
}
