{
    "$schema":  "http://json.schemastore.org/template",
    "author":  "Idise Praise",
    "classifications":  [
                            "Web",
                            "API",
                            "Clean Architecture",
                            "ASP.NET Core"
                        ],
    "identity":  "IdisePraise.BackendTemplate.CleanArchitecture",
    "name":  "Dotnet 10 Backend Template by Idise Praise",
    "shortName":  "cleanapi",
    "tags":  {
                 "language":  "C#",
                 "type":  "project"
             },
    "sourceName":  "BackendTemplate",
    "preferNameDirectory":  true,
    "sources":  [
                    {
                        "modifiers":  [
                                          {
                                              "exclude":  [
                                                              "**/bin/**",
                                                              "**/obj/**",
                                                              "**/.vs/**",
                                                              "**/.vscode/**",
                                                              "**/Logs/**",
                                                              "**/*.user",
                                                              "**/.git/**",
                                                              "**/.template.config/**",
                                                              "**/TEMPLATE_INSTRUCTIONS.md",
                                                              "**/BackendTemplate.Templates.csproj",
                                                              "**/.gitignore"
                                                          ]
                                          }
                                      ]
                    }
                ],
    "postActions":  [
                        {
                            "condition":  "(OS == \"Windows\")",
                            "description":  "Opens README.md in the editor",
                            "manualInstructions":  [
                                                       {
                                                           "text":  "Open README.md"
                                                       }
                                                   ],
                            "actionId":  "84C0DA21-51C8-4541-9940-6CA19AF04EE6",
                            "args":  {
                                         "files":  "0"
                                     },
                            "continueOnError":  true
                        }
                    ]
}
